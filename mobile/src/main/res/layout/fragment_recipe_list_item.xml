<?xml version="1.0" encoding="utf-8"?>
<org.alfonz.view.SelectorRelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/recipe_list_item"
	android:layout_width="match_parent"
	android:layout_height="@dimen/recipe_list_recycler_item_size"
	android:minHeight="@dimen/recipe_list_recycler_item_size"
	android:listSelector="@drawable/selector_clickable_item_bg_inverse">

	<ImageView
		android:id="@+id/recipe_list_item_image"
		android:layout_width="match_parent"
		android:layout_height="@dimen/recipe_list_recycler_item_size"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:contentDescription="@string/recipe_list_item_image_description" />

	<TextView
		android:id="@+id/recipe_list_item_name"
		android:layout_width="match_parent"
		android:layout_height="@dimen/recipe_list_recycler_item_panel_height"
		android:layout_alignParentBottom="true"
		android:gravity="center_vertical"
		android:paddingLeft="@dimen/global_spacing_16"
		android:paddingRight="@dimen/global_spacing_8"
		android:paddingStart="@dimen/global_spacing_16"
		android:paddingEnd="@dimen/global_spacing_8"
		android:textAppearance="@style/TextAppearance.Cookbook.Body1.Inverse"
		android:fontFamily="sans-serif"
		android:background="@color/recipe_list_recycler_item_panel_bg"
		android:maxLines="3"
		android:ellipsize="end" />

</org.alfonz.view.SelectorRelativeLayout>
