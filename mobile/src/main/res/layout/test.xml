<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:ignore="HardcodedText">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello TextView" />

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Hello Button" />

	<RadioButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello RadioButton" />

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello CheckBox" />

	<CheckedTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello CheckedTextView" />

	<Switch
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello Switch" />

	<ToggleButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello ToggleButton" />

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:src="@mipmap/ic_launcher"
		android:contentDescription="@null" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/ic_launcher"
		android:contentDescription="@null" />

	<ProgressBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<ProgressBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:progress="50"
		style="?android:attr/progressBarStyleHorizontal" />

	<SeekBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:progress="50" />

	<RatingBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:progress="50" />

	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/app_name" />

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="text"
		android:text="Hello EditText"
		android:hint="Hint"
		android:importantForAutofill="no" />

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textPassword"
		android:text="Hello EditText"
		android:hint="Hint"
		android:importantForAutofill="no" />

	<AutoCompleteTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Hello AutoCompleteTextView"
		android:hint="Hint" />

	<SearchView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:queryHint="Hello SearchView" />

	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:counterEnabled="true"
		app:counterMaxLength="32">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Hello TextInputEditText" />

	</com.google.android.material.textfield.TextInputLayout>

	<ViewStub
		android:id="@+id/stub_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inflatedId="@+id/toolbar"
		android:layout="@layout/toolbar" />

	<Space
		android:layout_width="match_parent"
		android:layout_height="@dimen/global_spacing_56" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/global_bg_front">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display4"
			android:text="D4" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display3"
			android:text="Display3" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display2"
			android:text="Display2" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display1"
			android:text="Display1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Headline"
			android:text="Text Appearance Headline" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Title"
			android:text="Text Appearance Title" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Subhead"
			android:text="Text Appearance Subhead" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Body2"
			android:text="Text Appearance Body2" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Body1"
			android:text="Text Appearance Body1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Caption"
			android:text="Text Appearance Caption" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Button"
			android:text="Text Appearance Button" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Menu"
			android:text="Text Appearance Menu" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/global_bg_front_inverse">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display4.Inverse"
			android:text="D4 I" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display3.Inverse"
			android:text="Display3 I" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display2.Inverse"
			android:text="Display2 I" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Display1.Inverse"
			android:text="Display1 I" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Headline.Inverse"
			android:text="Text Appearance Headline I" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Title.Inverse"
			android:text="Text Appearance Title Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Subhead.Inverse"
			android:text="Text Appearance Subhead Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Body2.Inverse"
			android:text="Text Appearance Body2 Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Body1.Inverse"
			android:text="Text Appearance Body1 Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Caption.Inverse"
			android:text="Text Appearance Caption Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Button.Inverse"
			android:text="Text Appearance Button Inverse" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Cookbook.Menu.Inverse"
			android:text="Text Appearance Menu Inverse" />

	</LinearLayout>
</LinearLayout>
